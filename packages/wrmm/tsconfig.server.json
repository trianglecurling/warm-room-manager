{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "composite": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["src/client/**/*", "node_modules"]
} 